<%- include("partials/header") %>
 <div class="navbar navbar-light bg-light">
	 <ul class="nav justify-content-center">
		 <li class="nav-item">
			 <p class="nav-link">
				 EDIT <%= blog.title %>
			 </p>
		 </li>
	 </ul>
</div>
<div class="container">
	<form action="/blog/<%= blog._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<label for="title">Title</label>
			<input type="text" class="form-control" id="title" name="blog[title]" value="<%= blog.title %>">
			<label for="image">Image</label>
			<input type="text" class="form-control" id="image" name="blog[image]" value="<%= blog.image%>">
			<label for="introduction">Introduction</label>
			<textarea name="blog[introduction]" rows="5" cols="200" class="form-control"><%= blog.introduction%></textarea>
			<label for="body">Body</label>
			<textarea id="body"name="blog[body]" rows="10" cols="200" class="form-control"><%= blog.body %></textarea>
			<label for="conc">Conclusion</label>
				<textarea id="conc" name="blog[conclusion]"rows="5" cols="200" class="form-control"><%= blog.conclusion %></textarea>
			
			<button class="btn btn-outline-primary" type="submit">Post</button>
		</div>
	</form>
	
</div>



<%- include("partials/footer") %>